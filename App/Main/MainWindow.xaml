                    <StackPanel Orientation="Vertical" Margin="0, 10, 0, 10" VerticalAlignment="Bottom">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5" Height="28">
                            <Label Content="Материал:" Width="110"/>
                            <ComboBox x:Name="MaterialCB" Width="360" SelectedIndex="0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Width="486" Margin="0,0,5,5" Height="28" Tag="Geometric">
                            <Label Content="Ширина:" Width="110" />
                            <xctk:DoubleUpDown FormatString="F3" x:Name="Width_DUD" Minimum="0.001" Tag="Width" Width="80"/>
                            <Label Content="Глубина:" Width="60"/>
                            <xctk:DoubleUpDown FormatString="F3" x:Name="Height_DUD" Minimum="0.001" Tag="Height" Width="80"/>
                            <Label Content="Длина:" Width="60"/>
                            <xctk:DoubleUpDown FormatString="F3" x:Name="Length_DUD" Minimum="0.001" Tag="Length" Width="80"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,5,5" Width="487" Tag="Process">
                            <Label Content="Скорость крышки:" Width="110"/>
                            <xctk:DoubleUpDown FormatString="F3" x:Name="LidSpeed_DUD" Minimum="0.001" Tag="LidSpeed" Width="80"/>
                            <Label Content="Температура крышки:" Width="200"/>
                            <xctk:DoubleUpDown FormatString="F3" x:Name="LidTemperature_DUD" Minimum="0.001" Tag="LidTemperature" Width="80"/>
