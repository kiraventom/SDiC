                <GroupBox x:Name="VisualizationGB" Header="Визуализация" Margin="495,0,0,0"/>
                <GroupBox x:Name="ReportGB" Header="Отчёты" DockPanel.Dock="Right" Margin="400,213,0,0" HorizontalAlignment="Left" Width="95">

