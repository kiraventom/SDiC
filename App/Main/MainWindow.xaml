        <Button x:Name="EditChemistryDbBt" Content="Открыть БД свойств" HorizontalAlignment="Right" Margin="0,0,10,10" Width="142" Height="25" VerticalAlignment="Bottom"/>
        <GroupBox x:Name="ScientistPanelGB" Header= "Панель исследователя" Margin="10,35,10,35">
            <Grid>
                <GroupBox x:Name="InputGB" Header="Входные данные" Height="230" VerticalAlignment="Top" HorizontalAlignment="Left" Width="542">
