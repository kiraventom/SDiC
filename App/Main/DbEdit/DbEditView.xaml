<Window x:Class="App.Main.DbEdit.DbEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App.Main.DbEdit"
        mc:Ignorable="d"
        Title="Редактирование БД" Height="418" Width="623" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <DataGrid x:Name="MainDG" SelectionMode="Single" CanUserReorderColumns="False" CanUserSortColumns="False" IsSynchronizedWithCurrentItem="True" EnableRowVirtualization="False" Margin="0,0,0,5" Height="336" CanUserAddRows="False"/>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="AddUserBt" Content="Добавить пользователя" Width="150" HorizontalAlignment="Left" Margin="5, 0, 0, 0" Click="AddUserBt_Click"/>
        </StackPanel>
        
    </StackPanel>
</Window>
